@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor Accessor

@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <link href="~/css/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <div style="height: 100%;">
        <main role="main" class="pb-3">
            <div style="width: 90%; margin: 20px auto">
                <div style="width: 100%; height: 100px">

                    <div style="float: left">
                        <img style="width:60px" class="profile-img" src="~/img/profile.png" />
                    </div>
                    <div style="margin-left: 18px; float: left">
                        <h5 style="font-weight:bold">
                            @Accessor.HttpContext?.Session.GetString("name")
                        </h5>
                        <h5>@Accessor.HttpContext?.Session.GetString("email")</h5>
                    </div>
                    <div style="float:right">
                        <button type="button" class="btn btn-default btn-sm">
                            <a class="glyphicon glyphicon-log-out" asp-controller="Users" asp-action="LogOut">&#160LogOut</a>
                        </button>
                    </div>
                </div>
                <div style="width: 90%; margin: 20px auto">
                    <div style="float:none;">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </main>
        <div style="bottom: 0;width: 100%; position: absolute; height: 85px; background-color: #F5F5F5">
            <div style="margin: 10px">
                <a class="nav-link text-dark" asp-controller="Home" asp-action="index"><img style="float: left" src="/img/home.png" /></a>

                <a class="nav-link text-dark" asp-controller="Home" asp-action="AddBuilding"><img style="float: right" src="/img/praking.png" /></a>
            </div>
        </div>
    </div>
    <link rel="stylesheet" href="~/css/home.css" asp-append-version="true" />
</body>
</html>
