@model SPSApps.Models.Register.LoginDTO

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> Registration or Sign Up form in HTML CSS | CodingLab </title>
    <link rel="stylesheet" href="style.css">
</head>
<body>
    <div class="wrapper">
        <h2>Login</h2>
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="input-box">
                <input asp-for="UserName" class="form-control" placeholder="Enter your email/phone" required>
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="input-box">
                <input asp-for="Password" type="password" placeholder="Enter your password" class="form-control" required />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            @if (ViewBag.notFound != null && ViewBag.notFound)
            {
                <span class="text-danger" style="color:red">Username/Password do not match</span>
            }


            <div class="input-box button">
                <input type="Submit" value="LogIn">
            </div>
            <div class="text">
                <h3>Don't have an account? <a asp-controller="Users" asp-action="Register">Register now</a>
            </div>
        </form>
    </div>
    <link rel="stylesheet" href="~/css/users.css" asp-append-version="true" />
</body>
</html>
